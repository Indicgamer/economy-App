<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Economy App</title>
    <link href="../output.css" rel="stylesheet">
</head>
<body class="bg-[#41EAD4]">
    <header class="bg-[#FF206E] px-5 py-5"> 
        <nav class="flex justify-center items-center">
            <a href="#" class=" text-3xl text-[#FFFFFF] font-merriweather font-bold">DPC</a>
        </nav>
    </header>
    <div class="md:w-[80%]   bg-[#FBFF12] my-10 md:mx-auto px-5 py-5">
        <h1 class="text-3xl font-montserrat font-semibold mb-5">Current Balance</h1>
        <div class="load"></div>
        <div class=" balance relative bottom-[220px] z-10 flex flex-col gap-4 justify-center items-center">
            <h1 class="text-7xl leading-none font-monserrat"><%= balance %></h1>
            <h1 class="text-7xl font-merriweather">DPC</h1>
        </div>
        <div class="mt-[-150px]">

        </div>
    </div>
    <div class="flex justify-center my-5">
        <button class="text-2xl font-monserrat text-[#0C0F0A] font-medium px-5 py-5 bg-[#FF206E] rounded-full hover:scale-110 ">Back to Main Menu</button>
    </div>
</body>
<script>
    const loader = document.querySelector('.load');
    const balance = document.querySelector('.balance');

    // setTimeout(()=>{
    //     loader.style.border = "none";
    // }, 4000)
    window.addEventListener('load', ()=>{
        loader.style.border = "none";
    })
    
    const btn = document.querySelector('button');
    btn.addEventListener('click', ()=>{
        window.location.href = '/main';
    })



</script>
</html>